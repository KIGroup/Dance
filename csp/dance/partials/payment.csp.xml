<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="dance/partials/payment.csp" application="/csp/dance/" default="1"><![CDATA[
<div class="row-fluid">
	<pre ng-bind="tournament.fullName" style="text-align: center; font-weight: bold; font-size: 1.3em !important;">
	</pre>
</div>  
<br>
<div class="row-fluid" style="text-align: center;">
	<a ng-href="#/tournament/{{tournament.id}}/registration" class="cellLink" title="{{'Регистрация участников на турнир'|localize}}" ng-bind="'Регистрация »'|localize"></a>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<a ng-href="#/tournament/{{tournament.id}}/competitions" class="cellLink" title="{{'Список всех групп турнира'|localize}}" ng-bind="'Все группы »'|localize"></a>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<a ng-href="#/tournament/{{tournament.id}}/participants" class="cellLink" title="{{'Список всех уникальных участников турнира'|localize}}" ng-bind="'Все участники »'|localize"></a>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<a ng-href="" ng-show="athlete" class="trnMenuSelected" title="{{'Сейчас Вы на этой странице'|localize}}" ng-bind="'Группы участника •'|localize"></a>
	<a ng-href="" ng-show="couple" class="trnMenuSelected" title="{{'Сейчас Вы на этой странице'|localize}}" ng-bind="'Группы пары •'|localize"></a>
</div>

<br>

<stcalert data="registrationAlert" style="margin: 10px 0 20px 0;"/>

<p>[ <font COLOR="RED"><b>!</b></font> ] {{'Щелчком мыши выберите необходимые группы для передачи данных в платежную систему.'|localize}}</p>

<!-- Competitions -->
<div class="row-fluid" style="padding-top: 10px;">
	<div class="span8">
		<span style="font-weight: bold;" ng-show="athlete">{{('Группы участника'|localize) + ' '}}<span class="tableCaptionImportant">{{athlete.lastName + ' ' + athlete.firstName}}</span>{{' '}}&nbsp;&nbsp;&nbsp;{{('Клуб'|localize) + ' '}}<span class="tableCaptionImportant">{{athlete.otherInfo.club}}</span></span>
		<span style="font-weight: bold;" ng-show="couple">{{('Группы пары'|localize) + ' '}}<span class="tableCaptionImportant">{{couple.man.lastName + ' ' + couple.man.firstName + ' - ' + couple.woman.lastName + ' ' + couple.woman.firstName}}</span>{{' '}}&nbsp;&nbsp;&nbsp;{{('Клуб'|localize) + ' '}}<span class="tableCaptionImportant">{{couple.otherInfo.club}}</span></span>
	</div>
	<div class="span4">
		<div class="btn-group pull-right">
			<button type="button" class="btn btn-mini btnRadio" ng-model="pageStore.tournamentPayment.gridCompetitions.tableShortView" btn-radio="true" ng-bind="'Коротко'|localize" title="{{'Скрывать дополнительные столбцы'|localize}}" ng-click="competitionTable.setHiddenCoulumns(true)"></button>
			<button type="button" class="btn btn-mini btnRadio" ng-model="pageStore.tournamentPayment.gridCompetitions.tableShortView" btn-radio="false" ng-bind="'Детально'|localize" title="{{'Отображать дополнительные столбцы'|localize}}" ng-click="competitionTable.setHiddenCoulumns(false)"></button>
		</div>
	</div> 
</div>

<div class="row-fluid">
	<stcgrid
    	grid="pageStore.tournamentDetails.gridCompetitions"
	    table-class="table table-bordered table-hover"
	    caption="''"
	    columns="competitionTable.columns"
	    items="competitionTable.items"
	    properties="competitionTable.properties"
	    update-items="competitionTable.loadItems(pageCurr, pageSize, sqlName, isDown, searchSqlName, searchText)"

	    page-curr="competitionTable.pageCurr"
	    page-total="competitionTable.pageTotal"
	    page-size="competitionTable.pageSize"
	    navigator-visible="false"
	    search-hide="true"

	    selectable="true"
	    selected-items="competitionTable.selectedItems"
	    multi-select-mode="competitionTable.multiSelectMode"
		on-select="competitionTable.onSelect(item)"
		
		action-column-visible="false"
		forcibly-update="competitionTable.forciblyUpdate"
	/>
</div>			


<button type="button" class="btn btn-small" ng-click="openConfirmDlg()" ng-disabled="competitionTable.selectedItems.length==0"><i class="fa fa-shopping-cart"></i>&nbsp;&nbsp;{{'Оплатить на danceplat.ru'|localize}}</button>

<div class="row-fluid">
	<div class="span4">
		<div>
			<danceplat-udsr-pay 
				id="danceplatUdsrPay"

				ng-hide="couple.man.numberWDSF != '' && couple.man.numberUDSR == ''"
				
				trn-id="tournament.idInternal"
				man-number-udsr="couple.man.numberUDSR"
				woman-number-udsr="couple.woman.numberUDSR"
				competitions="competitionList"
				hide-all="true"
				btn-name="''"/>
		</div>
		<div>
			<danceplat-other-pay 
				id="danceplatOtherPay"
				
				ng-show="couple.man.numberWDSF != '' && couple.man.numberUDSR == ''"

				trn-id="tournament.idInternal"

				male-age="couple.man.dob"
				male-last-name="couple.man.lastName"
				male-first-name="couple.man.firstName"

				female-age="couple.woman.dob"
				female-last-name="couple.woman.lastName"
				female-first-name="couple.woman.firstName"

				country="couple.otherInfo.country.name"
				city="couple.otherInfo.city"
				club="couple.otherInfo.club"
				trainer="couple.otherInfo.mainTrainer"

				competitions="competitionList"
				hide-all="true"
				btn-name="''"/>
		</div>
	</div>
	<div class="span8">
		<span class="pull-right" ng-bind="('Выбрано'|localize) + ' ' + competitionTable.selectedItems.length + ' ' + ('групп из'|localize) + ' ' + competitionTable.itemsTotal"></span>
	</div>
</div>	
<br>

<stcalert data="alert"/>

<div class="modal" id="ConfirmModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="ConfirmLabel" aria-hidden="true" ng-show="confirmModalVisible">
 	<div class="modal-header">
 		<button type="button" class="close" data-dismiss="modal" aria-hidden="true"  ng-click="confirmModalVisible=false">×</button>
		<h4 id="ConfirmLabel" ng-bind="'Данные для передачи в платежную систему'|localize"></h4>
	</div>
	<div class="modal-body" style="padding: 0 0 5px;">
		<div style="height: 310px; overflow: auto; border-bottom: 1px solid #CECECE; padding: 10px;">
			<!-- Single -->
			<div class="row-fluid" ng-show="confirmData.athlete">
				<div class="span5">
			        <div class="control-group">
			        	<label class="control-label" style="font-weight: bold;" ng-bind="('Участник'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.athlete.lastName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span3">
			        <div class="control-group">
			        	<label class="control-label" style="color: white;" ng-bind="'Имя'|localize"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.athlete.firstName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span4">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Дата рождения'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" datepicker-popup="{{'d MMMM y'|localize}}" ng-model="confirmData.athlete.dob" show-weeks="false" ng-required="true" disabled/>
	                	</div>
			    	</div>
				</div>
			</div>

			<!-- Man -->
			<div class="row-fluid" ng-show="confirmData.couple">
				<div class="span5">
			        <div class="control-group">
			        	<label class="control-label" style="font-weight: bold;" ng-bind="('Партнер'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.man.lastName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span3">
			        <div class="control-group">
			        	<label class="control-label" style="color: white;" ng-bind="'Имя'|localize"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.man.firstName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span4">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Дата рождения'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" datepicker-popup="{{'d MMMM y'|localize}}" ng-model="confirmData.couple.man.dob" show-weeks="false" ng-required="true" disabled/>
	                	</div>
			    	</div>
				</div>
			</div>
			<!-- Woman -->
			<div class="row-fluid" ng-show="confirmData.couple">
				<div class="span5">
			        <div class="control-group">
			        	<label class="control-label" style="font-weight: bold;" ng-bind="('Партнерша'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.woman.lastName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span3">
			        <div class="control-group">
			        	<label class="control-label" style="color: white;" ng-bind="'Имя'|localize"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.woman.firstName" required disabled></input>
	                	</div>
			    	</div>
				</div>
				<div class="span4">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Дата рождения'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" datepicker-popup="{{'d MMMM y'|localize}}" ng-model="confirmData.couple.woman.dob" show-weeks="false" ng-required="true" disabled/>
	                	</div>
			    	</div>
				</div>
			</div>
			<!-- Other Info -->
			<p><span style="font-weight: bold;" ng-bind="('Дополнительная информация'|localize) + ':'"></span></p>
			<div class="row-fluid">
				<div class="span6">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Страна'|localize) + '*'"></label>
			        	<div class="controls">
			    			<select class="span12" ng-model="confirmData.couple.otherInfo.country" ng-options="country as country.name for country in countries" ng-disabled="newCouple.fieldsDisabled">
				            </select> 
	                	</div>
			    	</div>
				</div>
				<div class="span6">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Город'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.otherInfo.city" required></input>
	                	</div>
			    	</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span6">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Клуб'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.otherInfo.club" required></input>
	                	</div>
			    	</div>
				</div>
				<div class="span6">
			        <div class="control-group">
			        	<label class="control-label" ng-bind="('Главный тренер'|localize) + '*'"></label>
			        	<div class="controls">
			    			<input class="span12" type="text" ng-model="confirmData.couple.otherInfo.mainTrainer" required></input>
	                	</div>
			    	</div>
				</div>
			</div>
		
			<p style="margin: 0 0 2px;"><span style="font-weight: bold;" ng-bind="('Группы'|localize) + ':'"></span></p>
			<p style="margin: 0 0 2px;" ng-repeat="cmp in competitionTable.selectedItems">
				<span ng-bind="($index+1) + '. ' + (cmp.competition.startDate|convertCacheDate:('d MMMM y'|localize)) + '. ' + cmp.competition.name + ', ' + cmp.competition.price + ' ' + ('руб.'|localize)"></span>
			</p>
		</div>
		<br>
		<div class="control-group" style="padding: 0 15px;">
   			<button type="button" class="btn btn-small" ng-click="goToPaymentSystem(confirmData.formId); closeConfirmDlg()"><i class="fa fa-download"></i>&nbsp;{{('Передать данные'|localize)}}</button>
   			<button type="button" class="btn btn-small pull-right" ng-click="closeConfirmDlg()"><i class="fa fa-ban"></i>&nbsp;{{('Отмена'|localize)}}</button>
    	</div>
    </div>
</div>
]]></CSP>
</Export>
