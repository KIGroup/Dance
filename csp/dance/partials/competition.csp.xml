<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="dance/partials/competition.csp" application="/csp/dance/" default="1"><![CDATA[
<div class="row-fluid">
	<div class="span3">
	</div>
	<div class="span6">
		<div class="accordion">
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" ng-bind="'Tournament'|localize"></a>
				</div>
				<div class="accordion-body">
					<div class="accordion-inner">
						 <div class="row-fluid">
							<div class="span6">
								<p><span class="spnTitle" ng-bind="'Name'|localize"></span>: <span ng-bind="page.tournament.name"></span></p>
								<p><span class="spnTitle" ng-bind="'Start date'|localize"></span>: <span ng-bind="(page.tournament.startDate|convertCacheDate:('d MMMM y'|localize))"></span></p>
								<p><span class="spnTitle" ng-bind="'End date'|localize"></span>: <span ng-bind="(page.tournament.endDate|convertCacheDate:('d MMMM y'|localize))"></span></p>
								<p><span class="spnTitle" ng-bind="('Country'|localize)"></span>: <span ng-bind="page.tournament.location.country.name"></span></p>
								<p><span class="spnTitle" ng-bind="('City'|localize)"></span>: <span ng-bind="page.tournament.location.cityName"></span></p>
							</div>
							<div class="span6">
								<p><span class="spnTitle" ng-bind="'Rank'|localize"></span>: <span ng-bind="page.tournament.rank.name"></span></p>
								<p><span class="spnTitle" ng-bind="'Status'|localize"></span>: <span ng-bind="page.tournament.status.name"></span></p>
								<p><span class="spnTitle" ng-bind="'Total competitions'|localize"></span>: <span ng-bind="page.tournament.competitionsCount"></span></p>
								<p><span class="spnTitle" ng-bind="'Total participants / unique'|localize"></span>: <span ng-bind="page.tournament.participantsCount+' / '+page.tournament.participantsUniqueCount"></span></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span3">
	</div>
</div>
<br>
<div class="row-fluid">
	<div class="span3">
	</div>
	<div class="span6">
		<div class="accordion">
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" ng-bind="page.accordionCaption|localize"></a>
				</div>
				<div class="accordion-body">
					<div class="accordion-inner">
						<form name="form_competition" ng-submit="page.saveCompetition()" style="margin: 0;">
							<div class="control-group">
						        <div class="row-fluid">
						        	<div class="span8">	
								        <label class="control-label" ng-bind="('Name'|localize) + '*'"></label>
								        <div class="controls">
								            <input class="span12" type="text" ng-model="page.competition.name" required></input>
								        </div>
								    </div>
								    <div class="span2">	
								        <label class="control-label" ng-bind="('Internal ID') + '*'"></label>
								        <div class="controls">
								            <input class="span12" type="text" ng-model="page.competition.idInternal" required></input>
								        </div>
								    </div>
								    <div class="span2">	
								        <label class="control-label" ng-bind="('External ID') + '*'"></label>
								        <div class="controls">
								            <input class="span12" type="text" ng-model="page.competition.idExternal" required></input>
								        </div>
								    </div>
						        </div>
						    </div>
						    <div class="control-group">
						    	<div class="row-fluid">
						    		<div class="span6">	
							        	<div class="control-group">
								            <label class="control-label" ng-bind="('Discipline'|localize) + '*'"></label>
								            <div class="controls">
								                <select class="span12" ng-model="page.competition.discipline.id" ng-options="discipline.id as discipline.name for discipline in page.disciplines" required>
								                </select>
								            </div>
								        </div>
							        </div>
							        <div class="span3">	
							        	<label class="control-label" ng-bind="('Date'|localize) + '*'"></label>
							        	<div class="controls">
							            	<input type="text" class="span12" datepicker-popup="{{'d MMMM y'|localize}}" ng-model="page.competition.startDate" show-weeks="false" ng-required="true" />
							        	</div>
									</div>
									<div class="span3">
							        	<label class="control-label" ng-bind="('Start time'|localize) + ''"></label>
							        	<div class="controls">
							            	 <input type="text" class="span12" placeholder="{{'HH:MM'|localize}}" pattern="([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]" ng-model="page.competition.startTime"></input>
							        	</div>
							    	</div>
								</div>
							</div>
						    <div class="control-group">
						    	<div class="row-fluid">
									<div class="span6">	
							 			<label class="control-label" ng-bind="('Age category'|localize) + '*'"></label>
							        	<div class="controls">
							            	<select class="span12" ng-model="page.competition.ageCategory.id" ng-options="age.id as (age.name + ' ('+ age.minAge + ' - ' + age.maxAge +')') for age in page.ageCategories" required>
					               			</select>
							        	</div>
							 		</div>
							 		<div class="span2">	
							 			<label class="control-label" ng-bind="('Price'|localize) + '*'"></label>
							        	<div class="controls">
							            	 <input type="text" class="span12" ng-model="page.competition.price" required></input>
							        	</div>
							 		</div>
							 		<div class="span2">	
							 			<label class="control-label" ng-bind="('Type'|localize) + '*'"></label>
							        	<div class="controls">
							            	 <select class="span12" ng-model="page.competition.type.id" ng-options="type.id as type.name for type in page.types" required>
					               			</select>
							        	</div>
							 		</div>
							 		<div class="span2">	
							 			<label class="control-label" ng-bind="('Limit'|localize) + ''"></label>
							        	<div class="controls">
							            	 <input type="text" class="span12" ng-model="page.competition.limit" required></input>
							        	</div>
							 		</div>
								</div>
							</div>
							<div class="control-group">
								<div class="row-fluid">
									<div class="span9">	
										<label class="control-label" ng-bind="('Classes'|localize) + '*'"></label>
										<div class="btn-group" style="margin-bottom: 15px;">
											<button type="button" class="btn btn-mini btnCheckBox" style="padding: 0 15px 0 15px;" ng-repeat="class in page.competition.dancerClasses"  ng-model="class.selected" ng-bind="class.name|localize"  btn-checkbox btn-checkbox-true="1" btn-checkbox-false="0"></button>
										</div>
									</div>
									<div class="span3">
										 <label class="checkbox pull-right" style="padding-top: 25px;" >
									    	<input type="checkbox" ng-model="page.competition.isInternational">{{'International'|localize}}
									    </label>
									</div>
								</div>
							</div>
						    <div class="control-group">
						        <div class="controls">
						            <button type="submit" class="btn btn-success btn-small" ng-bind="page.btnSubmitCaption|localize" ng-disabled="form_competition.$pristine"></button>
						            <button type="button" class="btn btn-small" ng-click="page.cancel()" ng-bind="'Cancel'|localize"></button>
						        </div>
						    </div>    		    		    
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span3">
	</div>
</div>


<div class="row-fluid">
	<div class="span3">
	</div>
	<div class="span6">
		<stcalert data="page.alert"/>
	</div>
	<div class="span3">
	</div>
</div>]]></CSP>
</Export>
